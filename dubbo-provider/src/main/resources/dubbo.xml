<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dcits="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://code.alibabatech.com/schema/dubbo
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">


    <!-- 指定web服务名字 -->
    <dcits:application name="helloworld-provider" />
    <!-- 声明服务注册中心 -->
    <!-- 使用zookeeper作为注册中心 -->
    <dcits:registry protocol="zookeeper" address="${zookeeper.address}:${zookeeper.port}" />
    <!-- 指定传输层通信协议 -->
    <dcits:protocol name="dubbo" host="${host.address}" port="${provider.port}" />




    <!-- 配置Bean -->
    <bean id="demoService"
          class="services.DemoServiceImpl" />

    <!--<bean id="demoTraceService"
          class="services.DemoTraceServiceImpl" />-->

    <bean id="fooService"
          class="services.FooServiceImpl" />

    <!-- 暴露服务地址,该服务的实现类是demoService的引用 -->
    <dcits:service ref="demoService"
                   interface="interfaces.DemoService"
                   protocol="dubbo" scope="remote"/>

    <dcits:service ref="fooService"
                   interface="interfaces.FooService"
                   protocol="dubbo" />

