<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dcits="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://code.alibabatech.com/schema/dubbo
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 指定web应用名字 -->
    <dcits:application name="helloworld-consumer" />
    <!-- 声明服务注册中心 -->

    <dcits:registry protocol="zookeeper" address="${zookeeper.address}:2181" />
    <!-- 引用服务,demoService仅用于根据接口生成动态代理，默认使用javassist生成代理对象 -->

    <dcits:protocol name="dubbo" host="${host.address}" />

    <dcits:reference id="demoService"
                     interface="interfaces.DemoService"
                     protocol="dubbo" scope="remote"/>

    <dcits:reference id="fooService"
                     interface="interfaces.FooService"
                     protocol="dubbo" />


    <dcits:reference id="barService"
                      interface="interfaces.BarService"
                      protocol="dubbo" />

    <dcits:reference id="demoTraceService"
                     interface="interfaces.DemoTraceService"
                     protocol="dubbo"/>


